extends ../templates/template-dishes
include ../mixins/platos
block append config
    - page = main_meals.name
    - metadescripcion = main_meals.descripcion
block content
    .container
        .dishes
            // TODO: * Modificar el | INCLUDE | y la variable de objetos
            each plate in main_meals.content
                if(plate.status === true)
                    +platos(plate.link,plate.img,plate.text,plate.price_uno,main_meals.category)