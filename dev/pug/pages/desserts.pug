extends ../templates/template-dishes
include ../mixins/platos
block append config
    - page = desserts.name
    - metadescripcion = desserts.descripcion
block content
    .container
        .dishes
            // TODO: * Modificar el | INCLUDE | y la variable de objetos
            each plate in desserts.content
                if(plate.status === true)
                    +platos(plate.link,plate.img,plate.text,plate.price_uno,desserts.category)