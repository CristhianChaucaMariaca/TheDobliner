include sponsor
mixin plato(img,title,price,pricetwo,ingredients,sponsor)
    .plate
        .plate__img
            .plate__logo
                img(src="media/"+logo.img+logo.extention, alt=logo.alt)
            picture.plate__cont__picture
                img.plate__picture(srcset="media/"+plates.category+"/"+img.picture+img.extention, alt=title)
        .container
            .plate__body
                h2.plate__title Bs&nbsp;!{title}
                p.plate__price Bs&nbsp;!{price}
                p.plate__price Bs&nbsp;!{pricetwo}
                p.plate__text Bs&nbsp;!{ingredients}
        +sponsor(sponsor)