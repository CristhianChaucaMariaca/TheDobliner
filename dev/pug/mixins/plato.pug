include sponsor
mixin plato(img,title,price,pricetwo,ingredients,sponsor,category)
    .plate
        .plate__img
            .plate__logo
                img(src="media/"+logo.img+logo.extention, alt=logo.alt)
            picture.plate__cont__picture
                img.plate__picture(srcset="media/"+category+"/"+img.picture+img.extention, alt=title)
        .plate__body
            h2.plate__title !{title}
            if(price)
                p.plate__price Bs&nbsp;!{price}
            if(pricetwo)
                p.plate__price Bs&nbsp;!{pricetwo}
            p.plate__text !{ingredients}
        .sponsors
            .sponsors__body
                include sponsor
                +sponsor(sponsor)

mixin platodos(plato,sponsor,category,modificador)
    .plate
        .plate__img
            .plate__logo
                img(src="media/"+logo.img+logo.extention, alt=logo.alt)
            picture.plate__cont__picture
                img.plate__picture(srcset="media/"+category+"/"+plato.img.picture+plato.img.extention, alt=plato.text)
        .plate__body
            h2.plate__title !{plato.text}
            if(plato.price_uno)
                p.plate__price Bs&nbsp;!{plato.price_uno} !{modificador.uno}
            if(plato.price_dos)
                p.plate__price Bs&nbsp;!{plato.price_dos} !{modificador.dos}
            if(plato.price_tres)
                p.plate__price Bs&nbsp;!{plato.price_tres} !{modificador.tres}
            p.plate__text !{plato.description}
        .sponsors
            .sponsors__body
                include sponsor
                +sponsor(sponsor)